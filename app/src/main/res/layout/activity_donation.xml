<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/loginscreenbg"
    tools:context=".donation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/logoforvarun" />

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#0B2A5C"
                android:text="Welcome"
                android:textStyle="bold"
                android:textSize="22sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Donation Box"
                    android:textColor="#0B2A5C"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/amountDisplay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="Select your Amount to Donate"
                            android:textColor="#1A1A1A"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <Button
                                android:id="@+id/btn50"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="4dp"
                                android:layout_weight="1"
                                android:backgroundTint="#EF6C2E"
                                android:padding="4dp"
                                android:text="₹50"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/btn100"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="4dp"
                                android:layout_weight="1"
                                android:backgroundTint="#EF6C2E"
                                android:padding="4dp"
                                android:text="₹100"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/btn200"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="4dp"
                                android:layout_weight="1"
                                android:backgroundTint="#EF6C2E"
                                android:padding="4dp"
                                android:text="₹200"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/btn500"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:backgroundTint="#EF6C2E"
                                android:padding="4dp"
                                android:text="₹500"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/customAmountInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/logintextip"
                            android:hint="Enter a Custom Amount (₹)"
                            android:inputType="number"
                            android:padding="12dp"
                            android:textColor="#1C1C1C"
                            android:textColorHint="#777777" />

                        <SeekBar
                            android:id="@+id/amountSeekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:max="1000" />

                        <TextView
                            android:id="@+id/selectedAmountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="₹ 0"
                            android:textColor="#121212"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/logintextip"
                    android:hint="Leave a Message (Optional)"
                    android:padding="12dp"
                    android:textColor="#1C1C1C"
                    android:textColorHint="#777777" />

                <Button
                    android:id="@+id/donateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#D62828"
                    android:padding="12dp"
                    android:text="Donate Now"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/donationHistoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#003049"
                    android:padding="12dp"
                    android:text="Donation History"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        layout="@layout/navigationn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>