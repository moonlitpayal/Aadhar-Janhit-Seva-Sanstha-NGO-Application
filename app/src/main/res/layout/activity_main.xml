<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginscreenbg"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/logoforvarun"
        android:contentDescription="App Logo" />

    <!-- Username -->
    <EditText
        android:id="@+id/useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Enter Username or Email"
        android:background="@drawable/logintextip"
        android:padding="16dp"
        android:textColor="#1C1C1C"
        android:textColorHint="#888888"
        android:fontFamily="sans-serif-medium" />

    <!-- Password -->
    <EditText
        android:id="@+id/userpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter Your Password"
        android:background="@drawable/logintextip"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#1C1C1C"
        android:textColorHint="#888888"
        android:fontFamily="sans-serif-medium" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2F4F9F"
        android:padding="14dp" />

    <!-- Guest / Mobile Login -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <Button
            android:id="@+id/guestbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guest Login"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#EF6C2E"
            android:padding="14dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/mobilebtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login with Mobile"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#27A5DE"
            android:padding="14dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Signup Text -->
    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="Don't have an account? Sign up"
        android:textSize="16sp"
        android:textColor="#2F4F9F"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>
