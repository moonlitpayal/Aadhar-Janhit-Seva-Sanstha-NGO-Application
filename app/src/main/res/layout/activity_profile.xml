<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/loginscreenbg"
    tools:context=".profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logoforvarun"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#0B2A5C"
                android:textStyle="bold"
                android:textSize="22sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/profile_circle_bg"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:contentDescription="Profile Picture" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="@drawable/divider_gradient"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="24dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/fullnameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full Name:"
                            android:textSize="18sp"
                            android:textColor="#EF6C2E"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/emailText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="18sp"
                            android:textColor="#009688"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/usernameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username:"
                            android:textSize="18sp"
                            android:textColor="#3F51B5"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/phoneText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone:"
                            android:textSize="18sp"
                            android:textColor="#27A5DE" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/guest_message_text"
                    android:layout_width="match_parent"
                    android-id="@+id/guest_message_text"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_circle_bg"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="Please register to see profile details."
                    android:textColor="#0B2A5C"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Donation Record"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#EF6C2E"
                            android:layout_marginBottom="16dp" />

                        <Button
                            android:id="@+id/btnDonationHistory"
                            android:layout_width="match_parent"
                            android-id="@+id/btnDonationHistory"
                            android:layout_height="wrap_content"
                            android:text="View Donation History"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#0B2A5C"
                            android:textStyle="bold"
                            android:padding="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/changePasswordButton"
                    android:layout_width="match_parent"
                    android-id="@+id/changePasswordButton"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#EF6C2E"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android-id="@+id/logoutButton"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#D62828"
                    android:padding="14dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/navigationn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>